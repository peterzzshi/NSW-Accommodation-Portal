{% extends "base.jinja2" %}


{% block head %}

    <title>Holiday Rentals, Homes, and more</title>

{% endblock %}


{% block body %}

    <div class="container">

        <div id="posts">


            {% for post in posts %}


                <div class="post">
                    <figure>
                        <a href="{{ url_for("profile", id=post.user_id) }}"><img src="{{ post.user_photo }}" alt=""></a>
                        <a href="{{ url_for("profile", id=post.user_id) }}"><figcaption> {{ post.user_name }}</figcaption></a>
                    </figure>


                    <p>requesting accommodation for {{ post.people_number }} people</p>
                    <p>from {{ post.start_date }} to {{ post.end_date }} in {{ post.suburb }}, {{ post.city }}</p>

                    <p>affordable range: {{ post.price_start }} ~ {{ post.price_end }}</p>
                    {% if post.comment %}
                        <p>{{ post.comment }}</p>
                    {% endif %}

                    <br>

                </div>

            {% endfor %}

        </div>
    </div>



{% endblock %}