{% extends "base.jinja2" %}


{% block head %}

    <title>Edit profile for {{ name }}</title>

{% endblock %}


{% block body %}


    <div class="text-center m-5">
        <form action="{{ url_for("edit_profile",  id=session["user_id"])}}" method="post">
            <div class="form-group row justify-content-center">
                <div class="col-2 align-self-center">
                    <h5>Name:</h5>
                </div>
                <div class="col-3 align-self-center">
                    <input class="form-control" type="text" name="name" value="{{ name }}">
                </div>
            </div>

            <div class="form-group row justify-content-center">
                <div class="col-2 align-self-center">
                    <h5>Gender*:</h5>
                </div>
                <div class="col-3 align-self-center">
                    <select required class="form-control" name="gender">
                        <option disabled selected value>Please select your gender</option>
                        <option value="M">Male</option>
                        <option value="F">Female</option>
                    </select>
                </div>
            </div>

            <div class="form-group row justify-content-center">
                <div class="col-2 align-self-center">
                    <h5>Phone Number:</h5>
                </div>
                <div class="col-3 align-self-center">
                    <input class="form-control" type="text" name="phone" value="{{ phone }}">
                </div>
            </div>

            <div class="form-group row justify-content-center">
                <div class="col-2 align-self-center">
                    <h5>D.O.B:</h5>
                </div>
                <div class="col-3 align-self-center">
                    <input class="form-control" type="date" name="dob" value="{{ dob }}">
                </div>
            </div>

            <div class="form-group row justify-content-center">
                <div class="col-2 align-self-center">
                    <h5>Description:</h5>
                </div>
                <div class="col-3 align-self-center">
                    <input class="form-control" type="text" name="description" value="{{ description if description else "" }}">
                </div>
            </div>

            <div class="form-group row justify-content-center">
                <div class="col-2 align-self-center">
                    <h5>Photo:</h5>
                </div>
                <div class="col-3 align-self-center">
                    <input class="form-control" type="text" name="photo" value="{{ photo if photo else "" }}">
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-5 align-self-center">
                    <button class="btn btn-block btn-primary">Update profile</button>
                </div>
            </div>
        </form>

    </div>






{% endblock %}