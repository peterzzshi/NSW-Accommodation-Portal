{% extends "base.jinja2" %}


{% block head %}

    <title>Accommodation portal in NSW</title>

{% endblock %}


{% block body %}

    <div class="container">

        <div class="jumbotron jumbotron-fluid">
            <h1>Welcome to the best accommodation portal in NSW</h1>
            <h4>Please check the correct button to navigate you to the right page.</h4>
        </div>

        <form action="{{ url_for("search") }}" method="post">
            <div class="row justify-content-center">
                <div class="input-group col-5 mb-5">
                    <input type="text" class="form-control" name="keyword" required placeholder="Please enter a keyword for your search">
                    <div class="input-group-append">
                        <button class="btn btn-block btn-info"><i class="fas fa-search fa-sm">Search</i></button>
                    </div>
                </div>
            </div>
        </form>

        <div class="row justify-content-around">
            <div class="col-2 ">
                <a href="{{ url_for( "traveller" )}}"><button class="btn btn-primary btn-lg" id="travel">I want to travel</button></a>
            </div>
            <div class="col-2 ">
                <a href="{{ url_for( "host" )}}"><button class="btn btn-secondary btn-lg" id="host">I want to host</button></a>
            </div>
        </div>

    </div>

{% endblock %}