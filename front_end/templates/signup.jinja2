{% extends "base.jinja2" %}


{% block head %}

    <title>Sign up page</title>

{% endblock %}


{% block body %}

    <div class="text-center m-5">
        <form action="{{ url_for("signup") }}" method="post">
            <div class="form-group row justify-content-center">
                <div class="col-2 align-self-center">
                    <h5>Email*:</h5>
                </div>
                <div class="col-3 align-self-center">
                    <input class="form-control" type="email" name="email" placeholder="your@email.com" autofocus required>
                </div>
            </div>
            <div class="form-group row justify-content-center">
                <div class="col-2 align-self-center">
                    <h5>Password*:</h5>
                </div>
                <div class="col-3 align-self-center">
                    <input class="form-control" type="password" name="password" required placeholder="Password">
                </div>
            </div>

            <div class="form-group row justify-content-center">
                <div class="col-2 align-self-center">
                    <h5>Name*:</h5>
                </div>
                <div class="col-3 align-self-center">
                    <input class="form-control" type="text" name="name" required placeholder="Name">
                </div>
            </div>

            <div class="form-group row justify-content-center">
                <div class="col-2 align-self-center">
                    <h5>Gender*:</h5>
                </div>
                <div class="col-3 align-self-center">
                    <select class="form-control" name="gender">
                        <option disabled selected value>Please select your gender</option>
                        <option value="M">Male</option>
                        <option value="F">Female</option>
                    </select>
                </div>
            </div>

            <div class="form-group row justify-content-center">
                <div class="col-2 align-self-center">
                    <h5>Date of birth</h5>
                </div>
                <div class="col-3 align-self-center">
                    <input class="form-control" type="date" name="dob" required pattern="[0-9]{4}-[0-9]{2}-[0-9]{2}"></label>
                </div>
            </div>

            <div class="form-group row justify-content-center">
                <div class="col-2 align-self-center">
                    <h5>Description</h5>
                </div>
                <div class="col-3 align-self-center">
                    <textarea class="form-control" name="description" placeholder="Say something about yourself"></textarea>
                </div>
            </div>


            <div class="form-group row justify-content-center">
                <div class="col-2 align-self-center">
                    <h5>Phone number</h5>
                </div>
                <div class="col-3 align-self-center">
                    <input class="form-control" type="text" name="phone" placeholder="Please enter your phone number">
                </div>
            </div>

            <div class="form-group row justify-content-center">
                <div class="col-2 align-self-center">
                    <h5>Photo</h5>
                </div>
                <div class="col-3">
                    <input class="form-control" type="text" name="photo" placeholder="Please enter a link to your profile picture">
                </div>
            </div>

            <div class="row justify-content-center">
                <div class="col-5 align-self-center">
                    <button class="btn btn-block btn-primary">Sign up</button>
                </div>
            </div>
        </form>
    </div>


{% endblock %}