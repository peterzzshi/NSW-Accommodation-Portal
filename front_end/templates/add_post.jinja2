{% extends "base.jinja2" %}


{% block head %}

    <title>Add a new post</title>

{% endblock %}


{% block body %}


    <div class="text-center m-3">
        <form action="{{ url_for("add_post") }}" method="post">

            <div class="form-group row justify-content-center">
                <div class="col-2 align-self-center">
                    <h5>City*:</h5>
                </div>
                <div class="col-4 align-self-center">
                    <input class="form-control" type="text" required name="city">
                </div>
            </div>

            <div class="form-group row justify-content-center">
                <div class="col-2 align-self-center">
                    <h5>Suburb:</h5>
                </div>
                <div class="col-4 align-self-center">
                    <input class="form-control" type="text" required name="suburb">
                </div>
            </div>

            <div class="form-group row justify-content-center">
                <div class="col-2 align-self-center">
                    <h5>Checkin date*:</h5>
                </div>
                <div class="col-4 align-self-center">
                    <input class="form-control" type="date" required name="start_date">
                </div>
            </div>

            <div class="form-group row justify-content-center">
                <div class="col-2 align-self-center">
                    <h5>Checkout date*:</h5>
                </div>
                <div class="col-4 align-self-center">
                    <input class="form-control" type="date" required name="end_date">
                </div>
            </div>

            <div class="form-group row justify-content-center">
                <div class="col-2 align-self-center">
                    <h5>Minimum price*:</h5>
                </div>
                <div class="col-4 align-self-center">
                    <input class="form-control" type="text" required name="price_start">
                </div>
            </div>

            <div class="form-group row justify-content-center">
                <div class="col-2 align-self-center">
                    <h5>Maximum price*:</h5>
                </div>
                <div class="col-4 align-self-center">
                    <input class="form-control" type="text" required name="price_end">
                </div>
            </div>

            <div class="form-group row justify-content-center">
                <div class="col-2 align-self-center">
                    <h5>Number of people:</h5>
                </div>
                <div class="col-4 align-self-center">
                    <input class="form-control" type="number" required name="people_number">
                </div>
            </div>

            <div class="form-group row justify-content-center">
                <div class="col-2 align-self-center">
                    <h5>Comment:</h5>
                </div>
                <div class="col-4 align-self-center">
                    <textarea class="form-control" placeholder="Enter your message here" name="comment"></textarea>
                </div>
            </div>


            <button class="btn btn-primary btn-block" id="add-listing">Submit</button>
        </form>
    </div>





{% endblock %}